@using System.Web.Optimization
@model WebAplication.Models.UserLoginForm
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/Layouts/_Authentication.cshtml";
}


<body>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="mask d-flex justify-content-center h-100 gradient-custom-3">
                <div class="size-210 bor10 p-lr-70 p-t-55 p-b-70 p-lr-15-lg w-full-md">
                    <h4 class="mtext-105 cl2 txt-center p-b-30">
                        Sign In
                    </h4>
                    @using (Html.BeginForm(FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        @Html.LabelFor(x => x.Email, new { @class = "mtext-102 cl2 plh3 p-l-5 p-r-20", @for = "email-input" })
                        @Html.ValidationMessageFor(x => x.Email)
                        <div class="bor8 m-b-20 how-pos4-parent">
                            @Html.TextBoxFor(x => x.Email, new
                            {
                                @class = "stext-117 cl2 plh3 size-116 p-l-30 p-r-30",
                                placeholder = "example@gmail.com"
                            })
                        </div>

                        @Html.LabelFor(x => x.Password, new { @class = "mtext-102 cl2 plh3 p-l-5 p-r-20", @for = "password-input" })
                        @Html.ValidationMessageFor(x => x.Password)
                        <div class="bor8 m-b-20 how-pos4-parent">
                            @Html.PasswordFor(x => x.Password, new
                            {
                                @class = "stext-117 cl2 plh3 size-116 p-l-30 p-r-30",
                                placeholder = "********"
                            })
                        </div>

                        @Html.LabelFor(x => x.RememberPassword, new { @class = "form-check-label", @for = "form1Example3" })
                        @Html.ValidationMessageFor(x => x.RememberPassword)
                        <div class="form-check d-flex justify-content-start mb-3 mb-3 stext-117 cl2 p-l-30 p-r-30">
                            @Html.CheckBoxFor(x => x.RememberPassword, new
                            {
                                @class = "form-check-input",
                                @style = "margin: 0.37em 2em 0.37em 0;"
                            })
                        </div>

                        <div class="mb-3 stext-113 cl2 d-flex justify-content-center">
                            Don't have an account?
                            <a class="cl1 pl-1" href="/account/signUp">Sign up</a>

                        </div>


                        <div class="d-flex justify-content-center">
                            <button class="flex-c-m stext-101 cl0 size-118 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer">
                                Sign In
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
</section>





    </body>

