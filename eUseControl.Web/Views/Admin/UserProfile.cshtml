
@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/Layouts/_Admin.cshtml";
}
 <div class="col-md-8">
    <div class="card card-user">
        <div class="card-header">
            <h4 class="card-title" style="color: #5466de">Edit Profile</h4>
        </div>
        <div class="card-body">
            <form>
                <div class="row">
                    <div class="col-md-6 pr-1">
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="form-control" placeholder="Enter Name" value="Max">
                        </div>
                    </div>
                    <div class="col-md-6 pl-1">
                        <div class="form-group">
                            <label>Surname</label>
                            <input type="text" class="form-control" placeholder="Enter surname" value="Saveliev">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 pr-1">
                        <div class="form-group">
                            <label>Email address</label>
                            <input type="text" class="form-control" placeholder="Enter email" value="max.sav@gmail.com">
                        </div>
                    </div>
                    <div class="col-md-6 pl-1">
                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" class="form-control" placeholder="Enter address" value="Republic of Moldova">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 pr-1">
                        <div class="form-group">
                            <label>City</label>
                            <input type="text" class="form-control" placeholder="City" value="Chisinau">
                        </div>
                    </div>
                    <div class="col-md-4 px-1">
                        <div class="form-group">
                            <label>Street</label>
                            <input type="text" class="form-control" placeholder="Street" value="Puskin">
                        </div>
                    </div>
                    <div class="col-md-4 pl-1">
                        <div class="form-group">
                            <label>Postal Code</label>
                            <input type="number" class="form-control" placeholder="ZIP Code">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Post</label>
                            <textarea class="form-control textarea">Sales Manager</textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="update ml-auto mr-auto">
                        <button type="submit" class="btn btn-primary btn-round">Update Profile</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

