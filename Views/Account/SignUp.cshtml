
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/Layouts/_Authentication.cshtml";
}

<body>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="mask d-flex justify-content-center h-100 gradient-custom-3">
                <div class="size-210 bor10 p-lr-70 p-t-55 p-b-70 p-lr-15-lg w-full-md">
                    <form>
                        <h4 class="mtext-105 cl2 txt-center p-b-30">
                            Create an account
                        </h4>

                        <div class="bor8 m-b-20 how-pos4-parent">
                            <input class="stext-117 cl2 plh3 size-116 p-l-30 p-r-30" type="text" name="email" placeholder="Name">
                        </div>
                        <div class="bor8 m-b-20 how-pos4-parent">
                            <input class="stext-117 cl2 plh3 size-116 p-l-30 p-r-30" type="text" name="email" placeholder="Surname">
                        </div>
                        <div class="bor8 m-b-20 how-pos4-parent">
                            <input class="stext-117 cl2 plh3 size-116 p-l-30 p-r-30" type="text" name="email" placeholder="Email Address">
                        </div>
                        <div class="bor8 m-b-20 how-pos4-parent">
                            <input class="stext-117 cl2 plh3 size-116 p-l-30 p-r-30" type="text" name="email" placeholder="Password">
                        </div>
                        <div class="bor8 m-b-20 how-pos4-parent">
                            <input class="stext-117 cl2 plh3 size-116 p-l-30 p-r-30" type="text" name="email" placeholder="Repeat password">
                        </div>

                        <div>
                            <div class="mb-3 stext-111 cl6 p-b-26">
                                By clicking register you are accepting our 
                                <a class="cl1" href="#">Terms & Conditions and Security</a> and 
                                <a class="cl1" href="#">Privacy & Cookie Policy</a>
                            </div>

                            <div class="d-flex justify-content-center">
                                <a href="/home" class="flex-c-m stext-101 cl0 size-118 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer">
                                    Sign Up
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
</body>
